# ============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. NEVER commit .env to Git!

# ============================================
# DJANGO SETTINGS
# ============================================
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Options: 'sqlite3' (local dev) or 'postgresql' (production)
DATABASE_ENGINE=sqlite3

# PostgreSQL Settings (only needed if DATABASE_ENGINE=postgresql)
POSTGRES_DB=demoportal
POSTGRES_USER=demoportal_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ============================================
# EMAIL SETTINGS
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp-mail.outlook.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@chrp-india.com
EMAIL_HOST_PASSWORD=your-password-here
DEFAULT_FROM_EMAIL=your-email@chrp-india.com

# ============================================
# SECURITY SETTINGS
# ============================================
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# ============================================
# MEDIA & STATIC FILES
# ============================================
MEDIA_URL=/media/
STATIC_URL=/static/